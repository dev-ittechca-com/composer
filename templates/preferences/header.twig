<div class="container-fluid">
  <div class="row">
    <ul id="topmenu2" class="user_prefs_tabs">
      <li{{ route == '/preferences/manage' ? ' class="active"' }}>
        <a href="{{ url('/preferences/manage') }}" class="tab{{ route == '/preferences/manage' ? 'active' }}">
          {% trans 'Manage your settings' %}
        </a>
      </li>

      <li{{ route == '/preferences/two-factor' ? ' class="active"' }}>
        <a href="{{ url('/preferences/two-factor') }}" class="tab{{ route == '/preferences/two-factor' ? 'active' }}">
          {% trans 'Two-factor authentication' %}
        </a>
      </li>

      <li{{ route == '/preferences/features' ? ' class="active"' }}>
        <a href="{{ url('/preferences/features') }}" class="tab{{ route == '/preferences/features' ? 'active' }}">
          {{ get_icon('b_tblops', 'Features'|trans) }}
        </a>
      </li>

      <li{{ route == '/preferences/sql' ? ' class="active"' }}>
        <a href="{{ url('/preferences/sql') }}" class="tab{{ route == '/preferences/sql' ? 'active' }}">
          {{ get_icon('b_sql', 'SQL queries'|trans) }}
        </a>
      </li>

      <li{{ route == '/preferences/navigation' ? ' class="active"' }}>
        <a href="{{ url('/preferences/navigation') }}" class="tab{{ route == '/preferences/navigation' ? 'active' }}">
          {{ get_icon('b_select', 'Navigation panel'|trans) }}
        </a>
      </li>

      <li{{ route == '/preferences/main-panel' ? ' class="active"' }}>
        <a href="{{ url('/preferences/main-panel') }}" class="tab{{ route == '/preferences/main-panel' ? 'active' }}">
          {{ get_icon('b_props', 'Main panel'|trans) }}
        </a>
      </li>

      <li{{ route == '/preferences/export' ? ' class="active"' }}>
        <a href="{{ url('/preferences/export') }}" class="tab{{ route == '/preferences/export' ? 'active' }}">
          {{ get_icon('b_export', 'Export'|trans) }}
        </a>
      </li>

      <li{{ route == '/preferences/import' ? ' class="active"' }}>
        <a href="{{ url('/preferences/import') }}" class="tab{{ route == '/preferences/import' ? 'active' }}">
          {{ get_icon('b_import', 'Import'|trans) }}
        </a>
      </li>
    </ul>
    <div class="clearfloat"></div>
  </div>

  {% if is_saved %}
    {{ 'Configuration has been saved.'|trans|raw_success }}
  {% endif %}

  {% if not has_config_storage %}
    {% apply format('<a href="' ~ get_docu_link('setup', 'linked-tables') ~ '">', '</a>')|notice %}
      {% trans 'Your preferences will be saved for current session only. Storing them permanently requires %sphpMyAdmin configuration storage%s.' %}
    {% endapply %}
  {% endif %}
